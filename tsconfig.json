{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "*test*",
  ]
}
