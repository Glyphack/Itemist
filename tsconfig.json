{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
